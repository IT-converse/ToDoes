<Page
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:sd="nativescript-ui-sidedrawer" loaded="pageLoaded">
    <ActionBar title="Project list" class="action-bar">
        <ActionItem tap="toggleDrawer" ios.systemIcon="4" android.systemIcon="ic_menu_btn_add" ios.position="left" />
        <NavigationButton visibility="hidden" ></NavigationButton>
    </ActionBar>
    <sd:RadSideDrawer id="sideDrawer" >
        <!-- <sd:RadSideDrawer id="sideDrawer"> -->
        <!-- side drawer content -->
        <sd:RadSideDrawer.drawerContent>
            <StackLayout class="sidedrawer-left">
                <StackLayout class="sidedrawer-header">
                    <Label text="Hello RadSideDrawer!" class="sidedrawer-header-brand" />
                </StackLayout>
                <StackLayout class="sidedrawer-content">
                    <label text="New project" class="sidedrawer-list-item-text" tap="onNewTask" />
                    <label text="projects" class="sidedrawer-list-item-text" tap="onTasks" />
                    <Label text="about" class="sidedrawer-list-item-text" />
                    <Label text="Log Out" class="sidedrawer-list-item-text" tap="onLogOUt"/>
                </StackLayout>
            </StackLayout>
        </sd:RadSideDrawer.drawerContent>
        <!-- The main content -->
        <sd:RadSideDrawer.mainContent>
            <StackLayout>
                <!-- <Button text="Menu" class="btn btn-primary" tap="toggleDrawer" /> -->
              <Label class="h1" text="Tasks"></Label>
                <GridLayout rows="auto, *, auto" columns="*">
                    <Image src="res://hero" stretch="aspectFit" row="0" col="0" class="hero" />
                    <StackLayout row="1" col="0" class="content">
                        <ListView items="{{ projects }}"  loaded="onLoaded" itemLoading="onItemLoading" itemTap="onItemTap">
                            <ListView.itemTemplate>
                                <StackLayout class="project" >
                                    <StackLayout orientation="horizontal">
                                        <Image src="{{ image_url }}" class="thumbnail" />
                                        <Label text="{{ title }}" />
                                    </StackLayout>
                                </StackLayout>
                            </ListView.itemTemplate>
                        </ListView>
                    </StackLayout>
                    <Label text="Written by BioBoost (aka Nico De Witte)" class="footer" textWrap="true" row="2" col="0" />
                </GridLayout>
            </StackLayout>
        </sd:RadSideDrawer.mainContent>
    </sd:RadSideDrawer>
</Page>