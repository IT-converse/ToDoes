<Page
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:sd="nativescript-ui-sidedrawer" loaded="pageLoaded">
    <ActionBar title="ToDoes App" class="action-bar">
        <ActionItem tap="toggleDrawer" ios.systemIcon="4" android.systemIcon="ic_menu_btn_add" ios.position="left" />
        <NavigationButton visibility="hidden" ></NavigationButton>
    </ActionBar>
    <sd:RadSideDrawer id="sideDrawer" >
        <!-- <sd:RadSideDrawer id="sideDrawer"> -->
        <!-- side drawer content -->
        <sd:RadSideDrawer.drawerContent>
            <StackLayout class="sidedrawer-left">
                <StackLayout class="sidedrawer-header">
                    <Label text="Hello RadSideDrawer!" class="sidedrawer-header-brand" />
                </StackLayout>
                <StackLayout class="sidedrawer-content">
                    <label text="overview" class="sidedrawer-list-item-text" tap="onOverview" />
                    <label text="create" class="sidedrawer-list-item-text" tap="onCreate" />
                    <Label text="TODO's" class="sidedrawer-list-item-text" />
                    <Label text="about" class="sidedrawer-list-item-text" />
                    <Label text="Log Out" class="sidedrawer-list-item-text" tap="onLogOUt"/>
                </StackLayout>
            </StackLayout>
        </sd:RadSideDrawer.drawerContent>
        <!-- The main content -->
        <sd:RadSideDrawer.mainContent>
            <StackLayout>
                <Button text="Toggle Drawer" class="btn btn-primary" tap="toggleDrawer" />
            </StackLayout>
        </sd:RadSideDrawer.mainContent>
    </sd:RadSideDrawer>
</Page>